---
import SectionContainer from '~/components/common/SectionContainer.astro';

interface Props {
  header: string;
  columnData: {
    title: string;
    content: string;
  }[];
}

const { header, columnData } = Astro.props;
---

<SectionContainer id={'dual-columns'}>
  <!-- Quad cols -->
  <h1 class="text-6xl text-center mb-32">{header}</h1>
  <div class="grid md:grid-cols-2 gap-16 place-items-center">
    {
      columnData.map((data) => (
        <div class="max-w-sm">
          <h2 class="text-center font-bold break-all text-xl" set:html={data.title} />
          <p class="text-center text-lg" set:html={data.content} />
        </div>
      ))
    }
  </div>
</SectionContainer>
