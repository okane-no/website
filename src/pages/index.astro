/* import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro'; */

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <!-- Hero Widget ******************* -->

  <Hero
    callToAction={{ text: 'Start din nettbutikk', href: 'https://www.youtube.com/watch?v=dQw4w9WgXcQ?autoplay=1', icon: 'tabler:download' }}
    callToAction2={{ text: 'Les mer om Okane', href: '#features' }}
    image={{ src: import('~/assets/images/hero.png'), alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      <span class="hidden xl:inline"> Gjør nettbutikk enkelt med</span><b></b>
      <span class="text-accent dark:text-white highlight">Okane</span>   </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Velkommen til
        <span class="font-semibold">Okane</span>, din vei til suksessrike nettbutikk! Vi skaper skreddersydde løsninger som tar din e-handel til nye høyder. Uansett om du er nyoppstartet eller ønsker å utvide din eksisterende virksomhet, er vi her for å hjelpe.  <br/>Ta det første skrittet mot suksess i dag!</span
      >
    
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    highlight="Fordeler"
    title="Hva får du med Okane"
    subtitle="Oppdag Okane: Din nøkkel til en vellykket digital tilstedeværelse."
    items={[
      [
        {
          title: 'Skreddersydde nettbutikker:',
